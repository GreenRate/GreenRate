<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <RelativeLayout
        android:id="@+id/entetesearch"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/rechercher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/rechercher"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backfleche"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zonerecherche"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp">


        <EditText
            android:id="@+id/barSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="@string/nom_du_produit"
            android:background="@drawable/border_buton"
            android:textSize="23sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />
        <ImageButton
            android:id="@+id/Searchbuton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loupe"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zoneproduit"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200dp">
        <ScrollView
            android:id="@+id/scrollproduit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/zoneinduviduelproduit"
                android:layout_width="match_parent"
                android:layout_height="125dp">
                <ImageView
                    android:id="@+id/imageproduit"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:background="@drawable/borderproduct"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/nameproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@string/product"
                    android:layout_toEndOf="@id/imageproduit"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/nutriscore"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/nutriscorec"
                    android:layout_below="@id/nameproduct"
                    android:layout_toEndOf="@id/imageproduit"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"/>
                <ImageView
                    android:id="@+id/ecoscore"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/p29734154d5052473g"
                    android:layout_below="@id/nameproduct"
                    android:layout_toEndOf="@id/nutriscore"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>