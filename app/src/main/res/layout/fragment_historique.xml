<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoriqueFragment"
    android:background="@color/white"
    tools:ignore="Overdraw">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backhistorique"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backfleche"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/historique_des_produits"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/prod1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@drawable/bordertxt">
                    <ImageView
                        android:id="@+id/imageproduit1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/prince"
                        android:background="@drawable/borderproduct"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@+id/nameproduct1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="@string/prince_chocolat"
                        android:layout_toEndOf="@id/imageproduit1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/nutriscore1"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/nutriscored"
                        android:layout_below="@id/nameproduct1"
                        android:layout_toEndOf="@id/imageproduit1"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ecoscorec"
                        android:layout_below="@id/nameproduct1"
                        android:layout_toEndOf="@id/nutriscore1"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp" />
                    </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/prod2"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@drawable/bordertxt"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/imageproduit2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/gazpacho"
                        android:background="@drawable/borderproduct"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@+id/nameproduct2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="@string/prince_chocolat"
                        android:layout_toEndOf="@id/imageproduit2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/nutriscore2"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/nutriscorea"
                        android:layout_below="@id/nameproduct2"
                        android:layout_toEndOf="@id/imageproduit2"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ecoscorea"
                        android:layout_below="@id/nameproduct2"
                        android:layout_toEndOf="@id/nutriscore2"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp" />
                    </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>