<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoriqueFragment"
    android:background="@color/white"
    tools:ignore="Overdraw">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backhistorique"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backfleche"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/historique_des_produits"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp">
                <ImageView
                    android:id="@+id/imageproduit"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:background="@drawable/borderproduct"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/nameproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@string/product"
                    android:layout_toEndOf="@id/imageproduit"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/nutriscore"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/nutriscoreb"
                    android:layout_below="@id/nameproduct"
                    android:layout_toEndOf="@id/imageproduit"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ecoscorec"
                    android:layout_below="@id/nameproduct"
                    android:layout_toEndOf="@id/nutriscore"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="TODO"
                    tools:ignore="ContentDescription,HardcodedText" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>