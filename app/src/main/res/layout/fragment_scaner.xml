<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/buttonProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/profil"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />

        <ImageButton
            android:id="@+id/buttonList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/liste"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:layout_alignTop="@id/entete">

        <Button
            android:id="@+id/button_scann"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/border_buton"
            android:text="@string/scan" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            app:strokeWidth="5dp"
            app:strokeColor="@color/gray"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_scann"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/msg_bvn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_greenrate"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonCompare"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/compare"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />

        <ImageButton
            android:id="@+id/buttonClassement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/loupe"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductFragment"
        android:orientation="horizontal"
        tools:ignore="Overdraw">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/nompruduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                tools:ignore="RelativeOverlap" />
            <ImageButton
                android:id="@+id/backproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/croix"
                tools:ignore="PxUsage"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="100dp">
            <ImageView
                android:id="@+id/mail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/mail"
                android:layout_centerHorizontal="true"
                android:background="@drawable/borderimage" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="300dp">
            <ImageView
                android:id="@+id/nutriscored"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/nutriscored"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="400dp">
            <ImageView
                android:id="@+id/ecoscored"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ecoscored"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="500dp">
            <TextView
                android:id="@+id/prx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prix"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/prx_prd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prixproduct"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/prx"/>

        </RelativeLayout>


    </FrameLayout>
</RelativeLayout>
