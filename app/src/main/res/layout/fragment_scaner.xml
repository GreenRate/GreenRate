<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/profil"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />

        <ImageButton
            android:id="@+id/button_list"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/liste"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:layout_alignTop="@id/entete">

        <Button
            android:id="@+id/button_scann"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/border_buton"
            android:text="@string/scan" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            app:strokeWidth="10dp"
            app:strokeColor="@android:color/darker_gray"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_scann"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/txthello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_greenrate"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottompage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_compare"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/balance"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />

        <ImageButton
            android:id="@+id/button_classement"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="20dp"
            android:layout_marginStart="300dp"
            android:src="@drawable/podium"
            android:background="@android:color/transparent"
            tools:ignore="PxUsage" />

    </RelativeLayout>
</RelativeLayout>